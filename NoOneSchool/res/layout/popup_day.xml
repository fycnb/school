<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/week_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择节数"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ListView
            android:id="@+id/day_listview"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:listSelector="@drawable/listview_item_selected" />

        <ListView
            android:id="@+id/lesson_start_listview"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:listSelector="@drawable/listview_item_selected" >
        </ListView>

        <ListView
            android:id="@+id/lesson_end_listview"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:listSelector="@drawable/listview_item_selected" />
    </LinearLayout>
 <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" >

            <TextView
                android:id="@+id/day_cancel_textview"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textSize="16sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="#ccc" />

            <TextView
                android:id="@+id/day_ok_textview"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textSize="16sp" />
        </LinearLayout>
</LinearLayout>