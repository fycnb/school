<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:padding="10dp"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/goods_img_iv"
        android:layout_width="45dp"
        android:layout_height="45dp" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="菜名:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/goods_classify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/goods_name"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="类别:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/goods_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/goods_name"
            android:layout_marginRight="40dp"
            android:layout_marginTop="5dp"
            android:text="价钱:"
            android:textSize="20sp" />
        
        <TextView
            android:id="@+id/goods_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_toRightOf="@id/goods_name"
            android:text="XXXXXXX"
            android:singleLine="true"
            android:textSize="20sp" />
        
        <TextView
            android:id="@+id/goods_classify_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_toRightOf="@id/goods_classify"
            android:text="MMMMMMMMM"
            android:layout_toLeftOf="@id/goods_money"
            android:layout_below="@id/goods_name_tv"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:textSize="20sp" />
        
        <TextView
            android:id="@+id/goods_money_tv"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="99.9"
            android:layout_alignParentRight="true"
            android:layout_below="@id/goods_name"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:textSize="20sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/goods_edit_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:background="@drawable/corner_shape3"
        android:paddingBottom="2dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="2dp"
        android:text="编辑"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/goods_delete_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:background="@drawable/corner_shape2"
        android:paddingBottom="2dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="2dp"
        android:text="删除"
        android:textColor="#fff"
        android:textSize="20sp" />

</LinearLayout>